<!--pages/home/home.wxml-->
<view class="placeholder" wx:if="{{placeholderFigureVisible}}">
  <image src="../../assets/placeholder.jpg" mode="widthFix"></image>
</view>
<view class="home" wx:if="{{!placeholderFigureVisible}}">
  <view class="topPlace" style="height: 16px; background-color: #36B4E4;"></view>
  <image class="banner" src="../../assets/banner.png" mode="widthFix"></image>
  <image class="notice" src="../../assets/notice.png" 
    wx:for="{{[1,2,3,4,5,6]}}"
    wx:key="index"
    mode="widthFix"></image>
  <image class="tabbar" src="../../assets/tabbar.png" mode="widthFix"></image>
  <view class="scan"  bindtap="goPreview"></view>
</view>