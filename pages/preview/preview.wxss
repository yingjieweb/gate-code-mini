.title {
  color: #046635;
  font-size: 34px;
  text-align: center;
  margin-top: 16px;
}

.arrow {
  display: flex;
  justify-content: center;
  align-items: center;
}

.arrow > .wrapper {
  width: 240px;
  height: 240px;
  margin-top: 20px;
  background-color: #046635;
  border-radius: 50%;
  animation: bump 0.98s linear infinite;
  position: relative;
}

@keyframes bump {
  0%, 100% {
    transform: scale(0.9);
  }
  50% {
    transform: scale(1.1);
  }
}

.arrow > .wrapper > .left {
  height: 30px;
  width: 110px;
  border-radius: 10px;
  background-color: white;
  position: absolute;
  top: 75px;
  left: 36px;
  transform: rotateZ(-45deg);
}

.arrow > .wrapper > .right {
  height: 30px;
  width: 110px;
  border-radius: 10px;
  background-color: white;
  position: absolute;
  top: 75px;
  right: 36px;
  transform: rotateZ(45deg);
}

.arrow > .wrapper > .axis {
  width: 30px;
  height: 130px;
  border-radius: 10px;
  background-color: white;
  position: absolute;
  top: 70px;
  left: 105px;
}

.time {
  color: #046635;
  margin-top: 16px;
  margin-bottom: 20px;
  text-align: center;
  font-size: 20px;
}

.info {
  height: 180px;
  padding: 20px;
  background-color: #046635;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info > view {
  color: #fbf6f6;
  font-size: 20px;
}

.info .key {
  width: 90px;
  display: inline-block;
  text-align: justify;
  text-align-last: justify;
}
